<style>
    table {
        width: 100%;
        border-collapse: collapse;
        text-align: center;
    }

    table tr th,
    table tr td {
        border: 1px #eee solid;
        padding: 5px;
    }

    
    .color-green {
        color: green;
    }    

    .color-red {
        color: red;
    }    

    .color-gray {
        color: gray;
    }    

    .color-blue {
        color: blue;
    }    

    .color-black {
        color: black;
    }

</style>

<table>
    <thead>
        <tr>
            <th>Invoice Number</th>
            <th>Amount</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {% for invoice in invoices %}
            <tr>
                <td>{{ invoice.invoiceNumber }}</td>
                <td>{{ invoice.amount|format_currency('USD') }}</td>
                <td>{{ invoice.status }}</td>
                <td>
                    {{ invoice.createdAt is empty ? 'N/A' : invoice.createdAt|date('d/m/Y') }}
                </td>
            </tr>
        {% else %}
            <tr><td collapse="4">No Invoices Found</td></tr>
        {% endfor %}
    </tbody>
</table>